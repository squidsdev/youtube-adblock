{
    "description": "Blocks YouTube adverts.",
    "manifest_version": 2,
    "name": "Adblock for YouTube",
    "version": "1.0",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "permissions": [
        "webNavigation",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "*://*.youtube.com/*"
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
